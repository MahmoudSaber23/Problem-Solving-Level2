#include <iostream>
#include <string>
using namespace std;

string ReadPassword()
{
    string Password;
    cout << "Please Enter a 3-Letter Password (All Capital)? " << endl;

    cin >>Password;

    return Password;
}
bool GuessPassword(string OriginalPassword)
{
    string Word = "";
    int Counter = 0;

    cout << endl;
    for (int i = 65; i <= 90; i++)
    {
        for (int j = 65; j <= 90; j++)
        {
            for (int k = 65; k <= 90; k++)
            {
                Counter++;

                Word.append(1, char(i));
                Word.append(1, char(j));
                Word.append(1, char(k));
                cout << "Trial [" << Counter << "] : " << Word << endl;

                if (Word == OriginalPassword)
                {
                    cout << "\n Password Is: " << Word << endl;
                    cout << "\n Found After " << Counter << " Trials(s)" << endl;
                    return true;

                }
                Word = "";
            }
        }
     
    }
    return false;
}

int main()
{
    GuessPassword(ReadPassword());
    
 
    return 0;
}
 
